<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="BorderPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="Controller.CompareController">
    <top>
        <ToolBar>
            <Label text="Compare multiple seeds (comma or space separated):" />
            <TextField fx:id="compareInput" prefWidth="300" promptText="e.g. 7,12,27" />
            <Button fx:id="compareStartBtn" text="Generate Comparison" />
            <Button fx:id="backBtn" onAction="#backOnAction" text="Back" />
        </ToolBar>
    </top>


    <center>
        <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
            
            <!-- Chart Container (LineChart added in controller) -->
            <VBox fx:id="compareChartContainer" prefWidth="800" spacing="10" />

            <VBox spacing="10">
                <Label text="Comparison Metrics" />
                <TextArea fx:id="compareMetrics" editable="false" prefWidth="300" wrapText="true" />
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
