<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="BorderPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CollatzController">

    <top>
        <MenuBar>
            <menus>

                <Menu text="File">
                    <items>
                        <MenuItem fx:id="exportMenuItem" text="Export CSV..."/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="exitMenuItem" text="Exit"/>
                    </items>
                </Menu>

                <Menu text="View">
                    <items>
                        <RadioMenuItem fx:id="linearScaleMenu" text="Linear Scale" selected="true"/>
                        <RadioMenuItem fx:id="logScaleMenu" text="Logarithmic Scale"/>
                    </items>
                </Menu>

                <Menu text="Mode">
                    <items>
                        <MenuItem fx:id="openCompareMenu" text="Open Compare Mode"/>
                    </items>
                </Menu>

                <Menu text="Help">
                    <items>
                        <MenuItem fx:id="aboutMenu" text="About"/>
                    </items>
                </Menu>

            </menus>
        </MenuBar>
    </top>

    <center>
        <VBox spacing="10" padding="12">

            <HBox spacing="8">
                <Label text="Enter n:"/>
                <TextField fx:id="inputField" prefWidth="200" promptText="e.g. 27 or 5,10,25"/>
                <Button fx:id="startBtn" text="Run"/>
                <Button fx:id="pauseBtn" text="Pause"/>
                <Button fx:id="resetBtn" text="Reset"/>
                <Button fx:id="exportBtn" text="Export CSV"/>
            </HBox>

            <!-- Chart Container (LineChart added in controller) -->
            <VBox fx:id="chartContainer" prefHeight="500" spacing="10"/>
        </VBox>
    </center>

    <right>
        <VBox spacing="10" padding="12">
            <Label text="Metrics"/>
            <TextArea fx:id="metricsArea" prefWidth="260" prefHeight="600" editable="false" wrapText="true"/>
        </VBox>
    </right>
    
</BorderPane>

