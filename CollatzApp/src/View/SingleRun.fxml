<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="BorderPane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CollatzController">

    <top>
        <MenuBar>
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem fx:id="exportMenuItem" onAction="#exportItemOnAction" text="Export CSV..." />
                        <SeparatorMenuItem />
                        <MenuItem fx:id="exitMenuItem" onAction="#exitOnAction" text="Exit" />
                    </items>
                </Menu>

                <Menu text="View">
                    <items>
                        <RadioMenuItem fx:id="linearScaleMenu" onAction="#linearScaleOnAction" selected="true" text="Linear Scale" />
                        <RadioMenuItem fx:id="logScaleMenu" onAction="#logScaleOnAction" text="Logarithmic Scale" />
                    </items>
                </Menu>

                <Menu text="Mode">
                    <items>
                        <MenuItem fx:id="openCompareMenu" onAction="#openCompareOnAction" text="Open Compare Mode" />
                    </items>
                </Menu>

                <Menu text="Help">
                    <items>
                        <MenuItem fx:id="aboutMenu" onAction="#aboutOnAction" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <VBox spacing="10">
            <HBox spacing="8">
                <Label text="Enter n:" />
                <TextField fx:id="inputField" prefWidth="200" promptText="e.g. 27 or 5,10,25" />
                <Button fx:id="startBtn" onAction="#runOnAction" text="Run" />
                <Button fx:id="pauseBtn" onAction="#pauseOnAction" text="Pause" />
                <Button fx:id="resetBtn" onAction="#resetOnAction" text="Reset" />
                <Button fx:id="exportBtn" mnemonicParsing="false" onAction="#exportOnAction" text="Export CSV" />
            </HBox>

            <VBox fx:id="chartContainer" prefHeight="400" spacing="10" />

            <VBox spacing="10">
                <Label text="Metrics" />
                <TextArea fx:id="metricsArea" editable="false" prefHeight="200" prefWidth="800" wrapText="true" />
            </VBox>
        
        </VBox>
    </center>

    </BorderPane>